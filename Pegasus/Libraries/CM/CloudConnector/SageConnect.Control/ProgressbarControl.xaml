<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SageConnect.Control" x:Class="SageConnect.Control.ProgressbarControl" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="750">
    <UserControl.Resources>
        <SolidColorBrush Color="White" Opacity=".75" x:Key="GridOpacityBrush"/>
        <Style TargetType="TextBlock"  x:Key="BaseTextBlockStyle">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Regular"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource GridOpacityBrush}" >
        
        <local:CircularProgressBar  VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Margin="343,295,377,325"/>
        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="Signing in ..." VerticalAlignment="Center" HorizontalAlignment="Center" Margin="378,304,303,332"/>
    </Grid>
</UserControl>
